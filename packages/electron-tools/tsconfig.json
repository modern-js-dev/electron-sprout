{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "preserve",
    "baseUrl": "./",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./typings"],
    "types": ["node"]
  },
  "include": ["src", "typings"]
}
